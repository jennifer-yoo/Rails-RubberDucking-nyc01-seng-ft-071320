<h1> New Duck Form</h1>

<% if flash[:my_error] %>
    <% flash[:my_error].each do |error| %>
        <%= error %>
    <%end%>
<%end%>

<%= form_for @duck do |f| %>
<%= f.label :name %>
<%= f.text_field :name %>
<%= f.label :description %>
<%= f.text_area :description %>
<%= f.label "Student" %>
<%= f.collection_select :student_id, Student.all, :id, :name %>
<%= f.submit %>
<%end%>