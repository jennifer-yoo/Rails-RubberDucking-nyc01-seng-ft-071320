<h1> Edit Student Form</h1>

<% if flash[:my_error] %>
    <% flash[:my_error].each do |error| %>
        <%= error %>
    <%end%>
<%end%>

<%= form_for @student do |f| %>
<%= f.label :name %>
<%= f.text_field :name %>
<%= f.label :mod %>
<%= f.number_field :mod, min: 1, max: 5 %>
<%= f.submit %>
<%end%>